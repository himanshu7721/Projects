<%- include('../partials/head.ejs') %>

<%- include('../partials/header.ejs', {title : 'Admin'}) %>
<form class="form-group container" autocomplete="off" method="POST" action="/admin/new">
    
        <input class="form-control-lg form-control my-3 text-center border-dark font-weight-bold" required
        placeholder="Title" type="text" name="title">
    <input class="form-control my-3 text-center border-dark" placeholder="Author" type="text" name="snippet">
    <fieldset>   
        <legend>Blog Description</legend>
    <textarea class="my-3 p-2 text-justify w-100 rounded border-dark area" required wrap="soft" type="text"
        name="content" placeholder="Enter your Full Blog here"></textarea>
    </fieldset>

    <button class="btn btn-primary mx-auto d-block mx-auto" type="submit">Submit And Publish</button>
</form>
<%- include('../partials/tail.ejs') %>